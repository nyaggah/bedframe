{
  "name": "@bedframe/core",
  "description": "Bedframe core - Your Browser Extension Development Framework (core funcs & types)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.37",
  "license": "MIT",
  "type": "module",
  "main": "dist/bedframe.cjs",
  "module": "dist/bedframe.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bedframe.js",
      "require": "./dist/bedframe.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/bedframe.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.ts*\" --report-unused-disable-directives --max-warnings 0",
    "lint:format": "pnpm format && pnpm lint",
    "build:pack": "pnpm build && pnpm pack"
  },
  "dependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "eslint-config-bedframe": "workspace:^",
    "eslint-config-turbo": "^1.10.16",
    "kolorist": "^1.8.0",
    "rollup": "^4.1.4",
    "rollup-plugin-node-externals": "^6.1.2",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "unplugin-fonts": "^1.0.3",
    "vite": "^4.5.0",
    "vite-plugin-babel-macros": "^1.0.6",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-externalize-deps": "^0.7.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{md,mdx,css,html,json,js}": [
      "prettier --write ."
    ],
    "*.{js,jsx,ts,tsx}": "eslint . --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "bedframe",
      "turbo"
    ],
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}
