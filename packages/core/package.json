{
  "name": "@bedframe/core",
  "description": "Bedframe core - Your Browser Extension Development Framework (core funcs & types)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.13",
  "license": "MIT",
  "type": "module",
  "main": "./dist/bedframe.umd.cjs",
  "module": "./dist/bedframe.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bedframe.js",
      "require": "./dist/bedframe.umd.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/bedframe.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "build:link": "pnpm build && chmod 755 ./dist && pnpm link --global",
    "preview": "vite preview",
    "lint": "eslint \"**/*.ts*\" --report-unused-disable-directives --max-warnings 0",
    "prettier:check": "pnpm prettier --check .",
    "prettier:write": "pnpm prettier --write .",
    "lint:format": "pnpm prettier:write && pnpm lint"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@types/chrome": "^0.0.237",
    "@types/node": "^16.18.25",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "eslint-config-bedframe": "*",
    "eslint-config-turbo": "^1.9.9",
    "tslib": "^2.5.3",
    "typescript": "^4.9.3",
    "unplugin-fonts": "^1.0.3",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.1.0"
  },
  "lint-staged": {
    "*.{md,mdx,css,html,json,js}": [
      "prettier --write ."
    ],
    "*{js,jsx,ts,tsx }": "eslint --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "turbo",
      "bedframe"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {},
    "ignorePatterns": [
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "kolorist": "^1.8.0"
  },
  "peerDependencies": {
    "unplugin-fonts": "^1.0.3"
  }
}
