{
  "name": "@bedframe/core",
  "description": "Bedframe core - Your Browser Extension Development Framework (core funcs & types)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.46",
  "license": "MIT",
  "type": "module",
  "main": "dist/bedframe.js",
  "module": "dist/bedframe.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bedframe.js",
      "require": "./dist/bedframe.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/bedframe.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write .",
    "lint": "oxlint --fix-dangerously",
    "build:pack": "pnpm build && pnpm pack"
  },
  "dependencies": {
    "@crxjs/vite-plugin": "2.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.11",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint-config-bedframe": "workspace:^",
    "eslint-config-turbo": "^2.5.6",
    "kolorist": "^1.8.0",
    "oxlint": "^1.22.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.0",
    "rollup-plugin-node-externals": "^8.1.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "unplugin-fonts": "^1.4.0",
    "vite": "^6.3.6",
    "vite-plugin-babel-macros": "^1.0.6"
  },
  "peerDependencies": {
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-externalize-deps": "^0.7.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write .",
      "oxlint --fix-dangerously"
    ],
    "*.{json,css,scss,md,mdx,html}": [
      "prettier --write ."
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}
