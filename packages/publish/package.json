{
  "name": "@bedframe/publish",
  "description": "Bedframe publish - publish you bedframe project to web store(s)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:link": "pnpm build && chmod 755 ./dist && pnpm link --global",
    "preview": "vite preview",
    "lint": "eslint \"**/*.ts*\" --report-unused-disable-directives --max-warnings 0",
    "prettier:check": "pnpm prettier --check .",
    "prettier:write": "pnpm prettier --write .",
    "lint:format": "pnpm prettier:write && pnpm lint",
    "rebuild:pack": "rm -rf node_modules pnpm-lock.yaml && pnpm i && pnpm build && pnpm pack"
  },
  "devDependencies": {
    "@bedframe/core": "workspace:*",
    "@types/got": "^9.6.12",
    "typescript": "^5.0.2",
    "vite": "^4.4.7",
    "vite-plugin-dts": "^2.3.0"
  },
  "lint-staged": {
    "*.{md,mdx,css,html,json,js}": [
      "prettier --write ."
    ],
    "*{js,jsx,ts,tsx }": "eslint --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "turbo",
      "bedframe"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {},
    "ignorePatterns": [
      "dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chrome-webstore-upload": "^1.0.0",
    "dotenv": "^16.3.1",
    "got": "^13.0.0"
  }
}
