{
  "name": "@bedframe/cli",
  "description": "Bedframe CLI - Your Browser Extension Development Framework (dev utility)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.5",
  "license": "MIT",
  "type": "module",
  "main": "build/index.cjs",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    }
  },
  "bin": {
    "bedframe": "./build/index.js"
  },
  "files": [
    "/build",
    "/stubs"
  ],
  "scripts": {
    "clean": "shx rm -rf build",
    "build": "yarn clean && tsc && rollup -c",
    "bed": "tsx ./src/index.ts",
    "bedframe:validate": "tsx ./src/lib/validate-manifest.ts --name=mycoolioextendo --version=0.0.0 --manifest_version=3",
    "build:watch": "yarn build --watch",
    "build:link": "npm uninstall --location=global @bedframe/cli && yarn build && chmod 755 ./build && npm link",
    "lint": "eslint \"**/*.ts*\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier:check": "prettier --check .",
    "prettier": "prettier --write . --loglevel silent"
  },
  "dependencies": {
    "@bedframe/core": "*",
    "commander": "^10.0.0",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "listr": "^0.14.3",
    "nanospinner": "^1.1.0",
    "pkg-install": "^1.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/chrome": "^0.0.236",
    "@types/fs-extra": "^11.0.1",
    "@types/listr": "^0.14.4",
    "@types/node": "^16.18.25",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "eslint-config-bedframe": "*",
    "eslint-config-turbo": "^1.9.4",
    "rollup": "^3.23.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-string": "^3.0.0",
    "tsx": "^3.12.7",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{css,html,json,js}": [
      "prettier --write ."
    ],
    "*{js,ts}": "eslint --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "turbo",
      "bedframe"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {},
    "ignorePatterns": [
      "build",
      "stubs",
      "tsconfig.tsbuildinfo"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  }
}
