{
  "name": "@bedframe/cli",
  "description": "Bedframe CLI - your Browser Extension Development framework (dev utility)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.78",
  "license": "MIT",
  "type": "module",
  "main": "dist/bedframe.js",
  "module": "dist/bedframe.js",
  "types": "dist/bedframe.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bedframe.js",
      "require": "./dist/bedframe.js",
      "types": "./dist/bedframe.d.ts"
    }
  },
  "bin": {
    "bedframe": "./dist/bedframe.js"
  },
  "files": [
    "/dist",
    "/stubs",
    "package.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "pnpm clean && tsc && rollup -c",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.ts*\" --report-unused-disable-directives --max-warnings 0",
    "lint:format": "pnpm format && pnpm lint",
    "build:pack": "pnpm build && pnpm pack"
  },
  "dependencies": {
    "@bedframe/core": "workspace:*",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "kolorist": "^1.8.0",
    "listr": "^0.14.3",
    "nanospinner": "^1.1.0",
    "node-fetch": "^3.3.2",
    "pkg-install": "^1.0.0",
    "prompts": "^2.4.2",
    "vite": "^4.5.3"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^12.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chrome": "^0.0.268",
    "@types/listr": "^0.14.9",
    "@types/node": "^20.12.11",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "concurrently": "^8.2.2",
    "eslint-config-bedframe": "workspace:^",
    "eslint-config-turbo": "^1.13.3",
    "rollup": "^4.17.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-string": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{css,html,json,js}": [
      "prettier --write ."
    ],
    "*.{js,jsx,ts,tsx}": "eslint . --fix"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "turbo",
      "bedframe"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {},
    "ignorePatterns": [
      "build",
      "dist",
      "stubs",
      "tsconfig.tsbuildinfo"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/cli"
  },
  "homepage": "https://bedframe.dev",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "concurrently": "^8.2.1"
  }
}
