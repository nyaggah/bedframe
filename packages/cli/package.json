{
  "name": "@bedframe/cli",
  "description": "Bedframe CLI - your Browser Extension Development framework (dev utility)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.95",
  "license": "MIT",
  "type": "module",
  "main": "dist/bedframe.js",
  "module": "dist/bedframe.js",
  "types": "dist/bedframe.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bedframe.js",
      "require": "./dist/bedframe.js",
      "types": "./dist/bedframe.d.ts"
    }
  },
  "bin": {
    "bedframe": "./dist/bedframe.js",
    "create-bedframe": "./dist/create-bedframe.js"
  },
  "files": [
    "/dist",
    "/stubs",
    "package.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "pnpm clean && tsc && rollup -c",
    "format": "prettier --write .",
    "lint": "oxlint --fix-dangerously",
    "build:pack": "pnpm build && pnpm pack"
  },
  "dependencies": {
    "@bedframe/core": "workspace:*",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "kolorist": "^1.8.0",
    "listr": "^0.14.3",
    "nanospinner": "^1.2.2",
    "node-fetch": "^3.3.2",
    "pkg-install": "^1.0.0",
    "prompts": "^2.4.2",
    "vite": "^6.3.6"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chrome": "^0.1.11",
    "@types/listr": "^0.14.9",
    "@types/node": "^22.18.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "concurrently": "^9.2.1",
    "eslint-config-bedframe": "workspace:^",
    "eslint-config-turbo": "^2.5.6",
    "oxlint": "^1.15.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-string": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write .",
      "oxlint --fix-dangerously"
    ],
    "*.{json,css,scss,md,mdx,html}": [
      "prettier --write ."
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git",
    "directory": "packages/cli"
  },
  "homepage": "https://bedframe.dev",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "concurrently": "^8.2.1"
  }
}
