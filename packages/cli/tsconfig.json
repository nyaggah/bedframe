{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["chrome", "node"],
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    // "paths": {
    //   "@bedframe/core": ["../core/dist"]
    // },
    "outDir": "dist"
  },
  "include": [
    "src",
    "templates",
    "stubs",
    "package.json"
    // "rollup-plugin-string.d.ts"
  ],
  "exclude": ["node_modules", "build"]
}
