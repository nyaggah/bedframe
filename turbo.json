{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["TS_NODE_PROJECT", "NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:link": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false
    },
    "format": {},
    "lint": {
      "outputs": []
    },
    "release": {
      "dependsOn": ["build"]
    }
  }
}
