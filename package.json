{
  "name": "@bedframe/monorepo",
  "description": "Bedframe - Your Browser Extension Development Framework (monorepo)",
  "author": {
    "name": "Joe Nyaggah",
    "url": "https://bedframe.dev"
  },
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:pack": "turbo run build:pack",
    "format_": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "lint:format": "turbo run lint:format",
    "cz": "cz",
    "release": "turbo run format lint build && changeset version && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/chrome": "^0.0.263",
    "@types/node": "^20.12.7",
    "@types/prompts": "^2.4.9",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-bedframe": "workspace:^",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup": "^4.15.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^3.14.0",
    "turbo": "^1.13.2",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "bedframe"
    ],
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/",
          "packages/*/"
        ]
      }
    },
    "ignorePatterns": [
      "build",
      "stubs",
      "tsconfig.tsbuildinfo"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nyaggah/bedframe.git"
  },
  "bugs": {
    "url": "https://github.com/nyaggah/bedframe/issues"
  },
  "homepage": "https://bedframe.dev"
}
